# MindFull Horizon Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-256-bit-secret-key-here-generate-with-python-secrets-token_hex-32
FLASK_APP=app.py

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
# For local development with SQLite:
# DATABASE_URL=sqlite:///mindful_horizon.db

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://username:password@host:port
# For local development:
# REDIS_URL=redis://localhost:6379

# AI Services Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here
OLLAMA_HOST=https://your-ollama-endpoint.com
# For local Ollama:
# OLLAMA_HOST=http://localhost:11434

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_STRATEGY=moving-window
RATELIMIT_DEFAULTS_DAILY=1000

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=uploads

# Email Configuration (for notifications - optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Cloud Storage (configure based on your cloud provider)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Or for Google Cloud:
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET_NAME=your-gcs-bucket-name

# Or for Azure:
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=your-container-name
